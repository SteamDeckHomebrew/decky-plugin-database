{
  "name": "bash-shortcuts",
  "version": "1.0.0",
  "description": "A plugin for creating and managing shortcuts that can be launched from the Quick Access Menu. Uses bash to run shortcuts, hence the name.",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "createDist": "rsync -r --exclude \"src/\" --exclude \"__pycache__\" --exclude \"node_modules\" /plugin/ /out/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tormak9970/bash-shortcuts.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "deck",
    "QoL",
    "shortcuts"
  ],
  "author": {
    "name": "Tormak",
    "email": "Tormak9970@gmail.com"
  },
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/Tormak9970/bash-shortcuts/issues"
  },
  "homepage": "https://github.com/Tormak9970/bash-shortcuts#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "16.14.0",
    "@types/uuid": "^8.3.4",
    "@types/webpack": "^5.28.0",
    "rollup": "^2.77.1",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "decky-frontend-lib": "^3.3.5",
    "react-icons": "^4.4.0",
    "uuid": "^9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
